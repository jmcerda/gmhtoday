{% extends "block.html.twig" %}
{% set attributes = attributes.addClass('site-branding') %}
{% block content %}
  {% if site_logo %}
    <div class="brand_parent">
    	<div class="small-8 medium-6 brand_inline">
  	    <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="site-branding__logo">
  	      <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" />
  	    </a>
      </div>
      {% endif %}
      {% if site_name or site_slogan %}
        <div class="site-branding__text small-6 show-for-medium float-right brand_inline">
          {% if site_name %}
            <div class="site-branding__name">
              <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a>
            </div>
          {% endif %}
          {% if site_slogan %}
            <div class="site-branding__slogan">{{ site_slogan }}</div>
          {% endif %}
        </div>
      </div>
  {% endif %}
{% endblock %}
